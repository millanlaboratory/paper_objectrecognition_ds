	month = apr,
	year = {2015},
	keywords = {Eigenvectors, Manifolds, Eigenvalues, Signal filtering, White noise, Fourier Analysis, Principal Component Analysis, electroencephalography},
	pages = {e0121741},
	file = {Full Text PDF:/home/ruslan/.zotero/zotero/u3v19mwx.default/zotero/storage/XJC74BPG/Graichen et al. - 2015 - SPHARA - A Generalized Spatial Fourier Analysis fo.pdf:application/pdf;Snapshot:/home/ruslan/.zotero/zotero/u3v19mwx.default/zotero/storage/Z66IZZAM/article.html:text/html}
