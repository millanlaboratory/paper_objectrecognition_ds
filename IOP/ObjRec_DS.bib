@article{jangraw_neurally_2014,
	title = {Neurally and ocularly informed graph-based models for searching {3D} environments},
	volume = {11},
	issn = {1741-2552},
	url = {http://stacks.iop.org/1741-2552/11/i=4/a=046003},
	doi = {10.1088/1741-2560/11/4/046003},
	abstract = {Objective. As we move through an environment, we are constantly making assessments, judgments and decisions about the things we encounter. Some are acted upon immediately, but many more become mental notes or fleeting impressions{\textemdash}our implicit {\textquoteleft}labeling{\textquoteright} of the world. In this paper, we use physiological correlates of this labeling to construct a hybrid brain{\textendash}computer interface (hBCI) system for efficient navigation of a 3D environment. Approach. First, we record electroencephalographic (EEG), saccadic and pupillary data from subjects as they move through a small part of a 3D virtual city under free-viewing conditions. Using machine learning, we integrate the neural and ocular signals evoked by the objects they encounter to infer which ones are of subjective interest to them. These inferred labels are propagated through a large computer vision graph of objects in the city, using semi-supervised learning to identify other, unseen objects that are visually similar to the labeled ones. Finally, the system plots an efficient route to help the subjects visit the {\textquoteleft}similar{\textquoteright} objects it identifies. Main results. We show that by exploiting the subjects{\textquoteright} implicit labeling to find objects of interest instead of exploring naively, the median search precision is increased from 25\% to 97\%, and the median subject need only travel 40\% of the distance to see 84\% of the objects of interest. We also find that the neural and ocular signals contribute in a complementary fashion to the classifiers{\textquoteright} inference of subjects{\textquoteright} implicit labeling. Significance. In summary, we show that neural and ocular signals reflecting subjective assessment of objects in a 3D environment can be used to inform a graph-based learning model of that environment, resulting in an hBCI system that improves navigation and information delivery specific to the user{\textquoteright}s interests.},
	language = {en},
	number = {4},
	urldate = {2016-04-12},
	journal = {Journal of Neural Engineering},
	author = {Jangraw, David C. and Wang, Jun and Lance, Brent J. and Chang, Shih-Fu and Sajda, Paul},
	year = {2014},
	pages = {046003},
	file = {IOP Full Text PDF:/home/ruslan/.zotero/zotero/u3v19mwx.default/zotero/storage/G58PCFZK/Jangraw et al. - 2014 - Neurally and ocularly informed graph-based models .pdf:application/pdf}
